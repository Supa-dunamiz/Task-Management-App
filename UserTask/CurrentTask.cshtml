@model IEnumerable<UserTask>

<h1 class="display-4 fw-normal">User Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="UserTask" asp-action="Create">Add New Task</a>
<a asp-action="Index" asp-area="" asp-controller="Dashboard" type="button" class="btn btn-dark" style="margin-right:100">All Tasks</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>
<a class="btn btn-warning" asp-area="" asp-controller="UserTask" asp-action="SearchByDate">Search for task By Date</a>


@if(Model.Count() != 0)
{
    <center style="padding-top: 50px">
        <h3>Tasks for the day</h3>
    </center>

 <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date of Task</th>
                    <th>Task Status</th>
                    <th>Priority</th>
                    <th></th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                   <tr>
                    <td>@item.Title</td>
                    <td>@item.DateOfTask.Value.Day/@item.DateOfTask.Value.Month/@item.DateOfTask.Value.Year</td>
                    <td>@item.TaskUpdate</td>
                    <td>@item.TaskPriority</td>
                    <td><a asp-action="Detail" asp-controller="UserTask" asp-route-id="@item.Id" asp-area="" type="button" class="btn btn-success">View Task</a></td>
                   </tr>
                </tbody>
            }
        </table>
    <div/>
    </div>
}
else
{
    <h4>No Task for Today</h4>
}
