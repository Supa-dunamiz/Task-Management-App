@using TaskApp.Data.Enum;
@using TaskApp.ViewModels
@model CreateUserTaskViewModel

<form method="post" asp-action="Create">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Title">
    </div>
    <span asp-validation-for="Title" class="text-danger"></span>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfTask">Date of Task</label>
        <input asp-for="DateOfTask" type="date" class="form-control" aria-describedby="emailHelp" placeholder="YY/MM/DD">
        <span asp-validation-for="DateOfTask" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskPriority">Task Priority</label>
        <select asp-for="TaskPriority" asp-items="@Html.GetEnumSelectList<TaskPriority>()" class="form-control">
            <option>---Select---</option>
        </select>
        <span asp-validation-for="TaskPriority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskUpdate">Task Status</label>
        <select asp-for="TaskUpdate" asp-items="@Html.GetEnumSelectList<TaskUpdate>()" class="form-control">
            <option>---Select---</option>
        </select>
        <span asp-validation-for="TaskUpdate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>