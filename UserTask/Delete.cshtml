﻿@using TaskApp.Data.Enum
@model UserTask

<h1>Are you sure you want to delete this Task?</h1>

<form method="post" asp-action="Delete">
    <div class="form-group">
        <label class="sr-only" asp-for="Title">Title</label>
        <input readonly asp-for="Title" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Title">
    </div>
    <span asp-validation-for="Title" class="text-danger"></span>
    <div class="form-group">
        <label class="sr-only" asp-for="Description">Description</label>
        <input readonly asp-for="Description" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="sr-only" asp-for="DateOfTask">Date of Task</label>
        <input readonly asp-for="DateOfTask" type="date" class="form-control" aria-describedby="emailHelp" placeholder="YY/MM/DD">
        <span asp-validation-for="DateOfTask" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="sr-only" asp-for="TaskPriority">Task Priority</label>
        <select asp-for="TaskPriority" asp-items="@Html.GetEnumSelectList<TaskPriority>()" class="form-control">
            <option>---Select---</option>
        </select>
        <span asp-validation-for="TaskPriority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="sr-only" asp-for="TaskUpdate">Task Status</label>
        <select asp-for="TaskUpdate" asp-items="@Html.GetEnumSelectList<TaskUpdate>()" class="form-control">
            <option>---Select---</option>
        </select>
        <span asp-validation-for="TaskUpdate" class="text-danger"></span>
    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>